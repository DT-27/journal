  <body style=" margin-left: 35%; background-color:#e5e5e5;">
    <style>
    @media only screen and (max-width:575px){
     body{
    margin-left: 25%;
     margin-right:auto;
    }
      .container{
        width:60vw;
      }
    }

   @media only screen and (min-width:576px) and (max-width:954px){
    .container{
      width:100vw;

    }
