      width:35vw;
    }
  .pass_show .ptxt {
    position:static;
  }

   }




    .container{
  position:fixed;
}

    .pass_show{position: relative}

    .pass_show .ptxt {

    position:static;

    top: 50%;

    right: 10px;

    z-index: 1;

    color:grey;

    margin-top: -10px;

    cursor: pointer;

    transition: .3s ease all;



    }

    .pass_show .ptxt:hover{color: #333333;}
    </style>
 <div style="">
  <h1 style=" margin-top:15%;font-size:3rem;">Update  password</h1><br>
  <%  if(mailnotfound.length > 0){ %>
    <div class="alert alert-warning" style="width:40%;" role="alert">
    <%= mailnotfound %>
    <small style="display:block;"> please make sure email is in the right casing</small>
  </div>
<% } %>
<%  if(matching.length > 0){ %>
  <div class="alert alert-danger" role="alert" style="width:40%; text-align:center;">
  <%= matching %>
</div>
<% } %>
</div>

    <form action="/updatepassword" method="post" class="container">
    	<div class="row">
    		<div class="col-sm-4">

    		    <label>Email</label>
    		    <div class="form-group">
                    <input type="email"  class="form-control" placeholder="email" name="fmail">
                </div>
    		       <label>New Password</label>
                <div class="form-group pass_show">
                    <input type="password"  class="form-control" placeholder="New Password" name="password1">
                </div>
    		       <label>Confirm Password</label>
                <div class="form-group pass_show">
                    <input type="password"  class="form-control" placeholder="Confirm Password" name="password2">
                </div>

    		</div>
    	</div>

      <button type="submit" name="button" style="
        background: #000000;
        border-radius: 28px;
        font-family: Courier New;
        color: #a8a8a8;
        font-size: 16px;
        padding: 10px 20px 10px 20px;
        text-decoration: none;

        ">
        Enter
      </button>
    </form>
 <script>


$(document).ready(function(){
$('.pass_show').append('<span class="ptxt">Show</span>');
});


$(document).on('click','.pass_show .ptxt', function(){

$(this).text($(this).text() == "Show" ? "Hide" : "Show");

$(this).prev().attr('type', function(index, attr){return attr == 'password' ? 'text' : 'password'; });

});

 </script>
